---
import "@fontsource/lora/400-italic.css";
import "@fontsource/lora/500-italic.css";
import "@fontsource/lora/600-italic.css";
import "@fontsource/lora/700-italic.css";
import "@fontsource/lora/400.css";
import "@fontsource/lora/500.css";
import "@fontsource/lora/600.css";
import "@fontsource/lora/700.css";
import "@fontsource/jetbrains-mono/400.css";
import "~/styles/global.css";

import { Footer } from "@bibleio/design";
import { Nav } from "../components/Nav";

const { title } = Astro.props;

const isPreview =
	import.meta.env.PROD && import.meta.env.CF_PAGES_BRANCH !== "main";
const isDev = import.meta.env.DEV;
---

<html lang="en" class="">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg" type="image/x-icon" />
    {isDev && <script is:inline src="https://unpkg.com/react-scan/dist/auto.global.js" />}
    <title>{title} | Bibleio Dev {isDev && "(development)"} {isPreview && "(preview)"}</title>
  </head>
  <body
    class="flex flex-col overflow-x-hidden bg-bg-1 font-serif text-body text-text"
  >
    <Nav path={Astro.url.pathname} client:load />
    <slot />
    <Footer hrefTargetOutside />
  </body>
</html>
