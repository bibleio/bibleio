---
import { Logo } from '@bibleio/design';
import ThemeSwitcher from './ThemeSwitcher.astro';
---

<footer
  class="relative grid grid-cols-4 items-center border-t border-t-stroke px-[256px] text-text max-[1550px]:px-0 max-[1100px]:grid-cols-1 max-[1100px]:divide-y max-[1100px]:border-none"
>
  <a
    class="absolute left-1/2 top-[-10%] flex size-72 -translate-x-1/2 items-center justify-center rounded-full border border-stroke bg-bg-1 duration-150 ease-out hover:scale-105 max-[1100px]:bottom-[96%]"
    href="/"
  >
    <Logo size={32} />
  </a>
  <div class="flex h-full flex-col gap-16 border-l border-stroke p-32">
    <div class="flex items-center justify-between">
      <h2 class="text-h2 font-medium">Bibleio</h2>
      <p class="text-right font-mono text-sub leading-none">2024 MIT-0</p>
    </div>
    <p class="text-body leading-[220%]">
      Innovating the industry of Bible software.
      <a
        href="https://duckyhq.com"
        target="_blank"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        By DuckyHQ.
      </a>
    </p>
    <ThemeSwitcher />
  </div>
  <div class="flex h-full flex-col gap-16 border-l border-stroke p-32">
    <h2 class="text-h2 font-medium">Products</h2>
    <div class="flex flex-col gap-24">
      <a
        href="/apps#web-app"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Web App
      </a>
    </div>
  </div>
  <div
    class="=items-start flex h-full flex-col gap-16 border-l border-stroke p-32"
  >
    <h2 class="text-h2 font-medium">Developers</h2>
    <div class="flex flex-col items-start gap-24">
      <a
        href="/roadmap#contribute"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Contribute
      </a>
      <a
        href="https://dev.bibleio.com/api"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        API
      </a>
      <a
        href="https://dev.bibleio.com/design"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Design
      </a>
      <a
        href="https://dev.bibleio.com/biblejson"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        BibleJSON
      </a>
    </div>
  </div>
  <div class="flex h-full flex-col gap-16 border-x border-stroke p-32">
    <h2 class="text-h2 font-medium">About</h2>
    <div class="flex flex-col gap-24">
      <a
        href="/roadmap"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Roadmap
      </a>
      <a
        href="/blog"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Blog
      </a>
      <a
        href="/#about"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        About
      </a>
      <a
        href="/contact"
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Contact
