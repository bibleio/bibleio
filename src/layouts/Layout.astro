---
import "@fontsource/lora";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body
    class="bg-light-bg text-body text-black font-lora overflow-x-hidden flex flex-col gap-0 p-0"
  >
    <slot />
  </body>
</html>
