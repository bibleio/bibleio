{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"target": "ES2022",
		"moduleResolution": "Bundler",
		"module": "ES2022",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@": ["./src/*"]
		},
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
