---
import { getCollection } from "astro:content";
import SidebarTree from "~/components/playground/SidebarTree.astro";
import { Logo } from "~/components/brand/Brand";
import ThemeSwitcher from "~/components/website/ThemeSwitcher.astro";

const previews = await getCollection("previews");
---

<div
  class="p-24 rounded-16 border border-stroke bg-fg-1 flex flex-col gap-3 col-span-1 h-full"
>
  <div class="flex justify-between w-full items-center">
    <a href="/">
      <Logo subText="Design" size={48} />
    </a>
    <ThemeSwitcher />
  </div>
  <SidebarTree items={previews} />

  <span class="flex-grow"></span>

  <a href="https://github.com/K0Rhq/un/tree/main/packages/preview" target="_blank" rel="noreferrer" class="text-sub text-text/50 hover:text-accent-reversed duration-150 ease-out">Powered by unPreview</a>
</div>
