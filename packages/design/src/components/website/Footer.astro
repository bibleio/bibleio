---
import { IconLogo, Logo } from "../brand/Brand";
import ThemeSwitcher from "./ThemeSwitcher.astro";
import {
	IconBrandDiscord,
	IconBrandYoutube,
	IconBrandInstagram,
	IconBrandBluesky,
	IconBrandX,
	IconBrandGithub,
} from "@tabler/icons-react";

/**
 * Footer
 * @param hrefTargetOutside - if true point the footer links outside the site (https://bibleio.com/) instead of (/)
 * @param devHrefTargetOutside - if true point the DEVELOPER footer links outside the site (https://bibleio.com/) instead of (/)
 * @returns the main bibleio footer
 */
interface Props {
	hrefTargetOutside?: boolean;
	devHrefTargetOutside?: boolean;
}
const { hrefTargetOutside, devHrefTargetOutside } = Astro.props;
---
<footer class="flex flex-col items-center border-t border-b border-stroke">
  <div
    class="relative grid grid-cols-4 max-w-[85rem] w-full items-center max-[1100px]:grid-cols-1 max-[1100px]:divide-y max-[1100px]:border-none"
  >
    <a
      class="absolute left-1/2 top-[-6%] flex size-48 -translate-x-1/2 items-center justify-center rounded-full border border-stroke bg-bg-1 duration-150 ease-out hover:border-accent-reversed max-[1100px]:top-[-2.2%]"
      href={hrefTargetOutside ? "https://bibleio.com/" : "/"}
    >
      <IconLogo size="2rem" reverseColor />
    </a>
    <div class="flex h-full flex-col gap-16 border-l border-stroke p-32">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-12">
          <a href="/"><Logo size={32} /></a>
          <code class="font-mono text-sub">FLOSS MIT-0</code>
        </div>
        <ThemeSwitcher />
      </div>
      <div class="flex flex-col gap-24">
        <a
          href={hrefTargetOutside ? "https://bibleio.com/handbook/about-us" : "/handbook/about-us"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          Handbook
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/handbook/about-us" : "/handbook/about-us"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
          >About us
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/team" : "/team"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
          >Team
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/blog" : "/blog"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
          >Blog
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/contact" : "/contact"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
          >Contact
        </a>
        <div class="flex gap-16 flex-wrap">
          <a
            href="https://discord.gg/7eVCyQ5GGb"
            class="text-text duration-150 ease-out hover:text-accent-reversed"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandDiscord strokeWidth={1.5} />
          </a>
          <a
            href="https://www.youtube.com/@bibleio"
            class="text-text duration-150 ease-out hover:text-accent-reversed"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandYoutube strokeWidth={1.5} />
          </a>
          <a
            href="https://www.instagram.com/bibleioo/"
            class="text-text duration-150 ease-out hover:text-accent-reversed"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandInstagram strokeWidth={1.5} />
          </a>
          <a
            href="https://bsky.app/profile/bibleio.com"
            class="text-text duration-150 ease-out hover:text-accent-reversed"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandBluesky strokeWidth={1.5} />
          </a>
          <a
            href="https://x.com/bibleioo"
            class="text-text duration-150 ease-out hover:text-accent-reversed"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandX strokeWidth={1.5} />
          </a>
          <a
            href="https://github.com/bibleio"
            class="text-text duration-150 ease-out hover:text-accent-reversed"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandGithub strokeWidth={1.5} />
          </a>
        </div>
        <a href="https://korhq.com" class="w-fit text-sub text-text hover:opacity-100 ease-out text opacity-75 duration-150">Made with ❤️ by KOR</a>
      </div>
    </div>
    <div class="flex h-full flex-col gap-16 border-l border-stroke p-32">
      <h2 class="text-h2">Products</h2>
      <div class="flex flex-col gap-24">
        <a
          href={hrefTargetOutside ? "https://bibleio.com/roadmap" : "/roadmap"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
          >Roadmap
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/apps#web" : "/apps#web"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          Web app
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/apps#mobile" : "/apps#mobile"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          Mobile app
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/apps#desktop" : "/apps#desktop"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          Desktop app
        </a>
      </div>
    </div>
    <div
      class="=items-start flex h-full flex-col gap-16 border-l border-stroke p-32"
    >
      <h2 class="text-h2">Developers</h2>
      <div class="flex flex-col items-start gap-24">
        <a
          href={devHrefTargetOutside ? "https://dev.bibleio.com/api/docs" : "/api/docs"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          API
        </a>
        <a
          href={devHrefTargetOutside ? "https://dev.bibleio.com/biblejson/docs" : "/biblejson/docs"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          BibleJSON
        </a>
        <a
          href={devHrefTargetOutside ? "https://dev.bibleio.com/design/docs" : "/design/docs"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          Design
        </a>
        <a
          href="https://cat-skate-e91.notion.site/Onboarding-132aafe2ea3c800ab45ddbe0a5db3da8?pvs=4"
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          Contribute
        </a>
      </div>
    </div>
    <div class="flex h-full flex-col gap-16 border-x border-stroke p-32">
      <h2 class="text-h2">You</h2>
      <div class="flex flex-col gap-24">
        <a
          href={hrefTargetOutside ? "https://bibleio.com/why-believe" : "/why-believe"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
          >Why believe?
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/give-your-rights" : "/give-your-rights"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          Give your rights
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/contact" : "/contact"}
          class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >
          Support
        </a>
      </div>
    </div>
  </div>
</footer>
