---
import { IconLogo, Logo } from "../brand/Brand";
import ThemeSwitcher from "./ThemeSwitcher.astro";
import {
  IconBrandDiscord,
  IconBrandYoutube,
  IconBrandInstagram,
  IconBrandFacebook,
  IconBrandBluesky,
  IconBrandX,
  IconBrandGithub,
} from "@tabler/icons-react";

/**
 * Footer
 * @param hrefTargetOutside - if true point the footer links outside the site (https://bibleio.com/) instead of (/)
 * @param devHrefTargetOutside - if true point the DEVELOPER footer links outside the site (https://bibleio.com/) instead of (/)
 * @returns the main bibleio footer
 */
interface Props {
  hrefTargetOutside?: boolean;
  devHrefTargetOutside?: boolean;
}
const { hrefTargetOutside, devHrefTargetOutside } = Astro.props;
---

<footer class="border-stroke flex flex-col items-center border-b border-t">
  <div
    class="relative grid w-full max-w-[85rem] grid-cols-4 items-center max-[1100px]:grid-cols-1 max-[1100px]:divide-y max-[1100px]:border-none"
  >
    <a
      class="border-stroke bg-bg-1 hover:border-accent-reversed absolute left-1/2 top-[-6%] flex size-48 -translate-x-1/2 items-center justify-center rounded-full border duration-150 ease-out max-[1100px]:top-[-2.2%]"
      href={hrefTargetOutside ? "https://bibleio.com/" : "/"}
    >
      <IconLogo size="2rem" reverseColor />
    </a>
    <div class="border-stroke flex h-full flex-col gap-16 border-l p-32">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-12">
          <a href="/"><Logo size={32} /></a>
          <code class="text-sub font-mono">FLOSS MIT-0</code>
        </div>
        <ThemeSwitcher />
      </div>
      <div class="flex flex-col gap-24">
        <a
          href={hrefTargetOutside
            ? "https://bibleio.com/handbook/about-us"
            : "/handbook/about-us"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          Handbook
        </a>
        <a
          href={hrefTargetOutside
            ? "https://bibleio.com/handbook/about-us"
            : "/handbook/about-us"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
          >About us
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/team" : "/team"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
          >Team
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/blog" : "/blog"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
          >Blog
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/contact" : "/contact"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
          >Contact
        </a>
        <div class="flex flex-wrap gap-16">
          <a
            href="https://discord.gg/7eVCyQ5GGb"
            class="text-text hover:text-accent-reversed duration-150 ease-out"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandDiscord strokeWidth={1.5} />
          </a>
          <a
            href="https://www.youtube.com/@bibleio"
            class="text-text hover:text-accent-reversed duration-150 ease-out"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandYoutube strokeWidth={1.5} />
          </a>
          <a
            href="https://www.instagram.com/bibleioo/"
            class="text-text hover:text-accent-reversed duration-150 ease-out"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandInstagram strokeWidth={1.5} />
          </a>
          <a
            href="https://www.facebook.com/profile.php?id=61575695094809"
            class="text-text hover:text-accent-reversed duration-150 ease-out"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandFacebook strokeWidth={1.5} />
          </a>
          <a
            href="https://bsky.app/profile/bibleio.com"
            class="text-text hover:text-accent-reversed duration-150 ease-out"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandBluesky strokeWidth={1.5} />
          </a>
          <a
            href="https://x.com/bibleioo"
            class="text-text hover:text-accent-reversed duration-150 ease-out"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandX strokeWidth={1.5} />
          </a>
          <a
            href="https://github.com/bibleio"
            class="text-text hover:text-accent-reversed duration-150 ease-out"
            target="_blank"
            rel="noreferrer"
          >
            <IconBrandGithub strokeWidth={1.5} />
          </a>
        </div>
        <a
          href="https://korhq.com"
          class="text-sub text-text text w-fit opacity-75 duration-150 ease-out hover:opacity-100"
          >Made with ❤️ by KOR</a
        >
      </div>
    </div>
    <div class="border-stroke flex h-full flex-col gap-16 border-l p-32">
      <h2 class="text-h2">Products</h2>
      <div class="flex flex-col gap-24">
        <a
          href={hrefTargetOutside ? "https://bibleio.com/roadmap" : "/roadmap"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
          >Roadmap
        </a>
        <a
          href={hrefTargetOutside
            ? "https://bibleio.com/apps#web"
            : "/apps#web"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          Web app
        </a>
        <a
          href={hrefTargetOutside
            ? "https://bibleio.com/apps#mobile"
            : "/apps#mobile"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          Mobile app
        </a>
        <a
          href={hrefTargetOutside
            ? "https://bibleio.com/apps#desktop"
            : "/apps#desktop"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          Desktop app
        </a>
      </div>
    </div>
    <div
      class="=items-start border-stroke flex h-full flex-col gap-16 border-l p-32"
    >
      <h2 class="text-h2">Developers</h2>
      <div class="flex flex-col items-start gap-24">
        <a
          href={devHrefTargetOutside
            ? "https://dev.bibleio.com/api/docs"
            : "/api/docs"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          API
        </a>
        <a
          href={devHrefTargetOutside
            ? "https://dev.bibleio.com/biblejson/docs"
            : "/biblejson/docs"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          BibleJSON
        </a>
        <a
          href={devHrefTargetOutside
            ? "https://dev.bibleio.com/design/docs"
            : "/design/docs"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          Design
        </a>
        <a
          href="https://cat-skate-e91.notion.site/Onboarding-132aafe2ea3c800ab45ddbe0a5db3da8?pvs=4"
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          Contribute
        </a>
      </div>
    </div>
    <div class="border-stroke flex h-full flex-col gap-16 border-x p-32">
      <h2 class="text-h2">You</h2>
      <div class="flex flex-col gap-24">
        <a
          href={hrefTargetOutside
            ? "https://bibleio.com/why-believe"
            : "/why-believe"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
          >Why believe?
        </a>
        <a
          href={hrefTargetOutside
            ? "https://bibleio.com/give-your-rights"
            : "/give-your-rights"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          Give your rights
        </a>
        <a
          href={hrefTargetOutside ? "https://bibleio.com/contact" : "/contact"}
          class="text-body text-text hover:text-accent-reversed w-fit duration-150 ease-out"
        >
          Support
        </a>
      </div>
    </div>
  </div>
</footer>
