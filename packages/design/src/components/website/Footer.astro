---
import { Logo } from "../base/Brand";
import ThemeSwitcher from "./ThemeSwitcher.astro";

/**
 * Footer
 * @param hrefTargetOutside - if true point the footer links outside the site (https://bibleio.com/) instead of (/)
 * @param devHrefTargetOutside - if true point the DEVELOPER footer links outside the site (https://bibleio.com/) instead of (/)
 * @returns the main bibleio footer
 */
interface Props {
	hrefTargetOutside?: boolean;
	devHrefTargetOutside?: boolean;
}
const { hrefTargetOutside, devHrefTargetOutside } = Astro.props;
---

<footer
  class="relative grid grid-cols-4 items-center border-t border-t-stroke px-[256px] text-text max-[1550px]:px-0 max-[1100px]:grid-cols-1 max-[1100px]:divide-y max-[1100px]:border-none"
>
  <a
    class="absolute left-1/2 top-[-6%] flex size-48 -translate-x-1/2 items-center justify-center rounded-full border border-stroke bg-bg-1 duration-150 ease-out hover:scale-105 max-[1100px]:top-[-2.2%]"
    href={hrefTargetOutside ? "https://bibleio.com/" : "/"}
  >
    <svg
      width="1.375rem"
      height="2rem"
      viewBox="0 0 22 32"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      class="fill-accent-reversed"
    >
      <path
        d="M8.09789 1.38197C8 1.68323 8 2.05549 8 2.8V8L2.8 8C2.05549 8 1.68323 8 1.38197 8.09789C0.77309 8.29572 0.295723 8.77309 0.0978869 9.38196C0 9.68323 0 10.0555 0 10.8V11.2C0 11.9445 0 12.3168 0.0978868 12.618C0.295723 13.2269 0.77309 13.7043 1.38197 13.9021C1.68323 14 2.05549 14 2.8 14H8V29.2C8 29.9445 8 30.3168 8.09789 30.618C8.29572 31.2269 8.77309 31.7043 9.38197 31.9021C9.68323 32 10.0555 32 10.8 32H11.2C11.9445 32 12.3168 32 12.618 31.9021C13.2269 31.7043 13.7043 31.2269 13.9021 30.618C14 30.3168 14 29.9445 14 29.2V14H19.2C19.9445 14 20.3168 14 20.618 13.9021C21.2269 13.7043 21.7043 13.2269 21.9021 12.618C22 12.3168 22 11.9445 22 11.2V10.8C22 10.0555 22 9.68323 21.9021 9.38197C21.7043 8.77309 21.2269 8.29572 20.618 8.09789C20.3168 8 19.9445 8 19.2 8L14 8V2.8C14 2.05549 14 1.68323 13.9021 1.38197C13.7043 0.77309 13.2269 0.295723 12.618 0.097887C12.3168 0 11.9445 0 11.2 0H10.8C10.0555 0 9.68323 0 9.38197 0.097887C8.77309 0.295723 8.29572 0.77309 8.09789 1.38197Z"
      ></path>
    </svg>
  </a>
  <div class="flex h-full flex-col gap-16 border-l border-stroke p-32">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-12">
        <a href="/"><Logo size={32} /></a>
        <code class="font-mono text-sub">FLOSS MIT-0</code>
      </div>
      <ThemeSwitcher />
    </div>
    <div class="flex flex-col gap-24">
      <a
        href={hrefTargetOutside ? "https://bibleio.com/roadmap" : "/roadmap"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Roadmap
      </a>
      <a
        href={hrefTargetOutside ? "https://bibleio.com/blog" : "/blog"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >Blog
      </a>
      <a
        href={hrefTargetOutside ? "https://bibleio.com/readme" : "/readme"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >README
      </a>
      <a
        href={hrefTargetOutside ? "https://bibleio.com/contact" : "/contact"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >Contact
      </a>
      <a
        href="https://duckyhq.com"
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >By DuckyHQ.
      </a>
      <div class="flex gap-20">
        <a
          href="https://github.com/bibleio"
          class="text-text duration-150 ease-out hover:text-accent-reversed"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="1.5rem"
            height="1.5rem"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width={1.5}
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
            ></path>
          </svg>
        </a>
        <a
          href="https://x.com/bibleioo"
          class="text-text duration-150 ease-out hover:text-accent-reversed"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="1.5rem"
            height="1.5rem"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width={1.5}
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-x"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M4 4l11.733 16h4.267l-11.733 -16z"></path>
            <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path>
          </svg>
        </a>
        <a
          href="https://mastodon.social/@bibleio"
          class="text-text duration-150 ease-out hover:text-accent-reversed"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="1.5rem"
            height="1.5rem"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width={1.5}
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-mastodon"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M18.648 15.254c-1.816 1.763 -6.648 1.626 -6.648 1.626a18.262 18.262 0 0 1 -3.288 -.256c1.127 1.985 4.12 2.81 8.982 2.475c-1.945 2.013 -13.598 5.257 -13.668 -7.636l-.026 -1.154c0 -3.036 .023 -4.115 1.352 -5.633c1.671 -1.91 6.648 -1.666 6.648 -1.666s4.977 -.243 6.648 1.667c1.329 1.518 1.352 2.597 1.352 5.633s-.456 4.074 -1.352 4.944z"
            ></path>
            <path
              d="M12 11.204v-2.926c0 -1.258 -.895 -2.278 -2 -2.278s-2 1.02 -2 2.278v4.722m4 -4.722c0 -1.258 .895 -2.278 2 -2.278s2 1.02 2 2.278v4.722"
            ></path>
          </svg>
        </a>
        <a
          href="https://discord.gg/7eVCyQ5GGb"
          class="text-text duration-150 ease-out hover:text-accent-reversed"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="1.5rem"
            height="1.5rem"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width={1.5}
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-discord"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M8 12a1 1 0 1 0 2 0a1 1 0 0 0 -2 0"></path>
            <path d="M14 12a1 1 0 1 0 2 0a1 1 0 0 0 -2 0"></path>
            <path
              d="M15.5 17c0 1 1.5 3 2 3c1.5 0 2.833 -1.667 3.5 -3c.667 -1.667 .5 -5.833 -1.5 -11.5c-1.457 -1.015 -3 -1.34 -4.5 -1.5l-.972 1.923a11.913 11.913 0 0 0 -4.053 0l-.975 -1.923c-1.5 .16 -3.043 .485 -4.5 1.5c-2 5.667 -2.167 9.833 -1.5 11.5c.667 1.333 2 3 3.5 3c.5 0 2 -2 2 -3"
            ></path>
            <path d="M7 16.5c3.5 1 6.5 1 10 0"></path>
          </svg>
        </a>
        <a
          href="https://www.youtube.com/@bibleio"
          class="text-text duration-150 ease-out hover:text-accent-reversed"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="1.5rem"
            height="1.5rem"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width={1.5}
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-youtube"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z"
            ></path>
            <path d="M10 9l5 3l-5 3z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  <div class="flex h-full flex-col gap-16 border-l border-stroke p-32">
    <h2 class="text-h2">Products</h2>
    <div class="flex flex-col gap-24">
      <a
        href={hrefTargetOutside ? "https://bibleio.com/apps#web" : "/apps#web"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Web app
      </a>
      <a
        href={hrefTargetOutside ? "https://bibleio.com/apps#mobile" : "/apps#mobile"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Mobile app
      </a>
      <a
        href={hrefTargetOutside ? "https://bibleio.com/apps#desktop" : "/apps#desktop"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Desktop app
      </a>
    </div>
  </div>
  <div
    class="=items-start flex h-full flex-col gap-16 border-l border-stroke p-32"
  >
    <h2 class="text-h2">Developers</h2>
    <div class="flex flex-col items-start gap-24">
      <a
        href={devHrefTargetOutside ? "https://dev.bibleio.com/api/docs" : "/api/docs"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        API
      </a>
      <a
        href={devHrefTargetOutside ? "https://dev.bibleio.com/biblejson/docs" : "/biblejson/docs"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        BibleJSON
      </a>
      <a
        href={devHrefTargetOutside ? "https://dev.bibleio.com/design/docs" : "/design/docs"}
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Design
      </a>
      <a
        href="https://cat-skate-e91.notion.site/Onboarding-132aafe2ea3c800ab45ddbe0a5db3da8?pvs=4"
        class="w-fit text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Contribute
      </a>
    </div>
  </div>
  <div class="flex h-full flex-col gap-16 border-x border-stroke p-32">
    <h2 class="text-h2">You</h2>
    <div class="flex flex-col gap-24">
      <a
        href={hrefTargetOutside ? "https://bibleio.com/why-believe" : "/why-believe"}
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
        >Why believe?
      </a>
      <a
        href={hrefTargetOutside ? "https://bibleio.com/give-your-rights" : "/give-your-rights"}
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Give your rights
      </a>
      <a
        href={hrefTargetOutside ? "https://bibleio.com/support" : "/support"}
        class="text-body text-text duration-150 ease-out hover:text-accent-reversed"
      >
        Support
      </a>
    </div>
  </div>
</footer>
